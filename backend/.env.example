# ============================================================================
# FidduPay - Backend Environment Configuration Template
# ============================================================================
# Copy this to .env and configure for your environment

# ============================================================================
# CORE INFRASTRUCTURE
# ============================================================================

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/fiddupay
DATABASE_MAX_CONNECTIONS=50
DATABASE_TIMEOUT_SECONDS=30

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10
REDIS_TIMEOUT_SECONDS=5

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_WORKERS=4
REQUEST_TIMEOUT_SECONDS=30

# ============================================================================
# BLOCKCHAIN CONFIGURATION
# ============================================================================

# Blockchain RPC URLs (Production)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
ETHEREUM_RPC_URL=https://eth.llamarpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
POLYGON_RPC_URL=https://polygon-rpc.com

# Sandbox/Test Network URLs
SOLANA_DEVNET_RPC_URL=https://api.devnet.solana.com
ETHEREUM_SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/demo
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545
POLYGON_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
ARBITRUM_SEPOLIA_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc

# Blockchain Explorer API
ETHERSCAN_API_KEY=your-etherscan-api-key

# Chain IDs for Production
ETHEREUM_CHAIN_ID=1
BSC_CHAIN_ID=56
POLYGON_CHAIN_ID=137
ARBITRUM_CHAIN_ID=42161

# Chain IDs for Sandbox/Testnet
ETHEREUM_SEPOLIA_CHAIN_ID=11155111
BSC_TESTNET_CHAIN_ID=97
POLYGON_MUMBAI_CHAIN_ID=80001
ARBITRUM_SEPOLIA_CHAIN_ID=421614

# Blockchain Settings
CONFIRMATION_BLOCKS_SOL=32
CONFIRMATION_BLOCKS_ETH=12
CONFIRMATION_BLOCKS_BSC=15
CONFIRMATION_BLOCKS_POLYGON=30
CONFIRMATION_BLOCKS_ARBITRUM=1

# Transaction Monitoring
BLOCK_MONITOR_INTERVAL_SECONDS=10
TRANSACTION_TIMEOUT_MINUTES=60

# ============================================================================
# PRICING & MARKET DATA
# ============================================================================

# Price API
BYBIT_PRICE_API_URL=https://api.bybit.com
COINBASE_PRICE_API_URL=https://api.coinbase.com/v2
PRICE_CACHE_TTL_SECONDS=180
PRICE_UPDATE_INTERVAL_SECONDS=15

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Encryption Keys (CHANGE THESE IN PRODUCTION)
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here
WEBHOOK_SIGNING_KEY=your-webhook-signing-key-here
JWT_SECRET=your-jwt-secret-key-here

# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# Account Security
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30
SESSION_TIMEOUT_HOURS=24
API_KEY_EXPIRY_DAYS=365

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST_SIZE=100
RATE_LIMIT_PER_API_KEY=true

# ============================================================================
# PAYMENT CONFIGURATION
# ============================================================================

# Payment Settings
DEFAULT_PAYMENT_EXPIRATION_MINUTES=20
PAYMENT_CLEANUP_INTERVAL_HOURS=1
PAYMENT_PAGE_BASE_URL=http://localhost:8080

# Fee Configuration
DEFAULT_FEE_PERCENTAGE=0.75

# Daily Volume Limits (New System)
DAILY_VOLUME_LIMIT_NON_KYC_USD=1000.00

# ============================================================================
# MERCHANT CONFIGURATION
# ============================================================================

# Merchant Settings
MERCHANT_REGISTRATION_ENABLED=true
MERCHANT_EMAIL_VERIFICATION_REQUIRED=false
MERCHANT_KYC_REQUIRED=false
MERCHANT_AUTO_APPROVAL=true

# ============================================================================
# WEBHOOK CONFIGURATION
# ============================================================================

# Webhook Settings
WEBHOOK_TIMEOUT_SECONDS=10
WEBHOOK_MAX_RETRIES=5
WEBHOOK_RETRY_DELAY_SECONDS=5
WEBHOOK_SIGNATURE_REQUIRED=true

# ============================================================================
# WITHDRAWAL CONFIGURATION
# ============================================================================

# Withdrawal Settings
WITHDRAWAL_ENABLED=true
WITHDRAWAL_AUTO_APPROVAL_LIMIT_USD=1000.00

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Core Features
TWO_FACTOR_ENABLED=true
DEPOSIT_ADDRESS_ENABLED=true
INVOICE_ENABLED=true
MULTI_USER_ENABLED=true

# Advanced Features
ANALYTICS_ENABLED=true
MAINTENANCE_MODE=false

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================

# Environment
ENVIRONMENT=development
DEBUG_MODE=true
