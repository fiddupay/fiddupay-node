        {
          "name": "Get Payment",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/payments/:paymentId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "payments", ":paymentId"],
              "variable": [
                {
                  "key": "paymentId",
                  "value": "payment_123"
                }
              ]
            }
          }
        },
        {
          "name": "List Payments",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/payments?limit=20&offset=0&status=pending&currency=USDT&network=ethereum&start_date=2026-01-01&end_date=2026-01-31",
              "host": ["{{baseUrl}}"],
              "path": ["api", "payments"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "offset", 
                  "value": "0"
                },
                {
                  "key": "status",
                  "value": "pending"
                },
                {
                  "key": "currency",
                  "value": "USDT"
                },
                {
                  "key": "network",
                  "value": "ethereum"
                },
                {
                  "key": "start_date",
                  "value": "2026-01-01"
                },
                {
                  "key": "end_date",
                  "value": "2026-01-31"
                }
              ]
            }
          }
        },
