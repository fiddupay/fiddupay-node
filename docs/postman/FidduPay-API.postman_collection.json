          "name": "Cancel Payment",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/payments/:paymentId/cancel",
              "host": ["{{baseUrl}}"],
              "path": ["api", "payments", ":paymentId", "cancel"],
              "variable": [
                {
                  "key": "paymentId",
                  "value": "payment_123"
                }
              ]
            }
          }
        },
        {
          "name": "Refund Payment",
          "request": {
            "method": "POST",
