{
  "info": {
    "name": "fiddupay Cryptocurrency Payment Gateway API",
    "_postman_id": "fiddupay-api-v1",
    "description": "Complete API collection for fiddupay cryptocurrency payment gateway. Modern payment processing across multiple blockchains with automatic forwarding and real-time notifications.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{api_key}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string",
      "description": "Base URL for the API"
    },
    {
      "key": "api_key",
      "value": "your_api_key_here",
      "type": "string",
      "description": "Your fiddupay API key"
    },
    {
      "key": "merchant_id",
      "value": "1",
      "type": "string",
      "description": "Merchant ID from registration"
    },
    {
      "key": "address_payment_id",
      "value": "",
      "type": "string",
      "description": "Address-only payment ID from creation"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            },
            "description": "Check service health status"
          },
          "response": [
            {
              "name": "Healthy",
              "originalRequest": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{base_url}}/health",
                  "host": ["{{base_url}}"],
                  "path": ["health"]
                }
              },
              "status": "OK",
              "code": 200,
              "_postman_previewlanguage": "json",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "cookie": [],
              "body": "{\n  \"status\": \"healthy\",\n  \"timestamp\": \"2026-01-24T15:30:00Z\"\n}"
            }
          ]
        }
      ]
    },
    {
      "name": "Merchant Management",
      "item": [
        {
          "name": "Register Merchant",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('api_key', response.api_key);",
                  "    pm.collectionVariables.set('merchant_id', response.merchant_id);",
                  "    pm.test('API key received', function () {",
                  "        pm.expect(response.api_key).to.be.a('string');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"business_name\": \"Test Business\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/merchants/register",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "merchants", "register"]
            },
            "description": "Register a new merchant account"
          }
        },
        {
          "name": "Rotate API Key",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('api_key', response.api_key);",
                  "    pm.test('New API key received', function () {",
                  "        pm.expect(response.api_key).to.be.a('string');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/merchants/api-keys/rotate",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "merchants", "api-keys", "rotate"]
            },
            "description": "Rotate API key for security"
          }
        },
        {
          "name": "Configure Wallet",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"crypto_type\": \"USDT_ETH\",\n  \"address\": \"0x742d35Cc6634C0532925a3b8D4C9db96590c6C87\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/merchants/wallets",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "merchants", "wallets"]
            },
            "description": "Configure wallet address for a cryptocurrency"
          }
        },
        {
          "name": "Configure Webhook",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"url\": \"https://your-site.com/webhook\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/merchants/webhook",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "merchants", "webhook"]
            },
            "description": "Configure webhook URL for payment notifications"
          }
        }
      ]
    },
    {
      "name": "Payment Management",
      "item": [
        {
          "name": "Create Payment",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('payment_id', response.payment_id);",
                  "    pm.test('Payment created', function () {",
                  "        pm.expect(response.payment_id).to.be.a('string');",
                  "        pm.expect(response.status).to.equal('PENDING');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount_usd\": \"100.00\",\n  \"crypto_type\": \"USDT_ETH\",\n  \"description\": \"Order #12345\",\n  \"metadata\": {\n    \"order_id\": \"12345\",\n    \"customer_id\": \"cust_123\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/payments",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "payments"]
            },
            "description": "Create a new payment request"
          }
        },
        {
          "name": "List Payments",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/payments?page=1&page_size=20",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "payments"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "page_size",
                  "value": "20"
                },
                {
                  "key": "status",
                  "value": "PENDING",
                  "disabled": true
                },
                {
                  "key": "crypto_type",
                  "value": "USDT_ETH",
                  "disabled": true
                },
                {
                  "key": "from_date",
                  "value": "2026-01-01T00:00:00Z",
                  "disabled": true
                },
                {
                  "key": "to_date",
                  "value": "2026-12-31T23:59:59Z",
                  "disabled": true
                }
              ]
            },
            "description": "Get list of payments with optional filtering"
          }
        },
        {
          "name": "Get Payment",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/payments/{{payment_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "payments", "{{payment_id}}"]
            },
            "description": "Get details of a specific payment"
          }
        },
        {
          "name": "Verify Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"transaction_hash\": \"0xabc123...\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/payments/{{payment_id}}/verify",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "payments", "{{payment_id}}", "verify"]
            },
            "description": "Manually verify a payment"
          }
        },
        {
          "name": "Create Address-Only Payment",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('address_payment_id', response.payment_id);",
                  "    pm.test('Address-only payment created', function () {",
                  "        pm.expect(response.payment_id).to.be.a('string');",
                  "        pm.expect(response.customer_amount).to.be.a('string');",
                  "        pm.expect(response.customer_pays_fee).to.be.a('boolean');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"requested_amount\": \"100.00\",\n  \"crypto_type\": \"ETH\",\n  \"merchant_address\": \"0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb\",\n  \"description\": \"Direct payment to merchant wallet\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/address-only-payments",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "address-only-payments"]
            },
            "description": "Create an address-only payment that sends funds directly to merchant address"
          }
        },
        {
          "name": "Get Address-Only Payment",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/address-only-payments/{{address_payment_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "address-only-payments", "{{address_payment_id}}"]
            },
            "description": "Get details of a specific address-only payment"
          }
        },
        {
          "name": "Update Fee Setting",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.test('Fee setting updated', function () {",
                  "        pm.expect(response.success).to.be.true;",
                  "        pm.expect(response.customer_pays_fee).to.be.a('boolean');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customer_pays_fee\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/fee-setting",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "fee-setting"]
            },
            "description": "Update merchant fee payment preference (customer pays fee vs merchant pays fee)"
          }
        },
        {
          "name": "Get Fee Setting",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/fee-setting",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "fee-setting"]
            },
            "description": "Get current fee payment preference"
          }
        }
      ]
    },
