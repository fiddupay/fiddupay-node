# ============================================================================
# PayFlow - Production Environment Configuration
# ============================================================================
# WARNING: Keep this file secure! Contains sensitive keys.
# File permissions: chmod 600 .env.production

# Database (Production)
DATABASE_URL=postgresql://payflow_user:CHANGE_THIS_PASSWORD@localhost:5432/payflow_production
DATABASE_MAX_CONNECTIONS=50

# Redis (Production)
REDIS_URL=redis://localhost:6379

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Blockchain RPC URLs (MAINNET - Use paid providers for reliability)
# Recommended: QuickNode, Alchemy, Infura
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
BSC_RPC_URL=https://bsc-dataseed.binance.org
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
POLYGON_RPC_URL=https://polygon-rpc.com

# Blockchain Explorer APIs (Optional - for transaction verification)
# Get API keys from: bscscan.com, arbiscan.io, polygonscan.com
BSCSCAN_API_URL=https://api.bscscan.com/api
BSCSCAN_API_KEY=

ARBISCAN_API_URL=https://api.arbiscan.io/api
ARBISCAN_API_KEY=

POLYGONSCAN_API_URL=https://api.polygonscan.com/api
POLYGONSCAN_API_KEY=

# Price API
BYBIT_PRICE_API_URL=https://api.bybit.com
PRICE_CACHE_TTL_SECONDS=30

# Security Keys (GENERATE WITH: openssl rand -hex 32)
ENCRYPTION_KEY=GENERATE_NEW_KEY_HERE
WEBHOOK_SIGNING_KEY=GENERATE_NEW_KEY_HERE

# Webhooks
WEBHOOK_TIMEOUT_SECONDS=10
WEBHOOK_MAX_RETRIES=5

# Rate Limiting (Higher for production)
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# Payment Settings
DEFAULT_PAYMENT_EXPIRATION_MINUTES=15
DEFAULT_FEE_PERCENTAGE=1.50
PAYMENT_PAGE_BASE_URL=https://pay.yourdomain.com

# Email Configuration (Production SMTP)
# Recommended: SendGrid, AWS SES, Mailgun
EMAIL_ENABLED=true
EMAIL_FROM=noreply@yourdomain.com
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY

# Feature Flags
TWO_FACTOR_ENABLED=true
DEPOSIT_ADDRESS_ENABLED=true
WITHDRAWAL_ENABLED=true
INVOICE_ENABLED=true
MULTI_USER_ENABLED=true
MAINTENANCE_MODE=false

# SQLx (Required for offline compilation)
SQLX_OFFLINE=true

# Logging (Less verbose in production)
RUST_LOG=info,crypto_payment_gateway=info
